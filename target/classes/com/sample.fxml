<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.Controller">

    <!-- onKeyReleased="" sẽ gọi đến method trong class Controller mỗi khi có sự kiện nhấn 1 nút từ bàn phím và nhả ra
         để xử lý sự kiện -->
    <TextField fx:id="nameField" onKeyReleased="#handleKeyReleased" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <Button fx:id="helloButton" onAction="#onButtonClicker" text="Say Hello" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button fx:id="byeButton" onAction="#onButtonClicker" text="Say Bye" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
</GridPane>
